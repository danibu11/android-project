<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/fNameText"
        android:layout_width="146dp"
        android:layout_height="39dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="28dp"
        android:text="first name"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lNameText"
        android:layout_width="146dp"
        android:layout_height="39dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:text="last name"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fNameText" />

    <TextView
        android:id="@+id/regionText"
        android:layout_width="146dp"
        android:layout_height="39dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:text="region"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ageText" />

    <TextView
        android:id="@+id/languegeText"
        android:layout_width="146dp"
        android:layout_height="39dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:text="language"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/regionText" />

    <TextView
        android:id="@+id/passText"
        android:layout_width="146dp"
        android:layout_height="39dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:text="password"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/languegeText" />

    <TextView
        android:id="@+id/confirmPassText"
        android:layout_width="146dp"
        android:layout_height="39dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:text="confirm password"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passText" />

    <TextView
        android:id="@+id/ageText"
        android:layout_width="146dp"
        android:layout_height="39dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:text="age"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lNameText" />


    <TextView
        android:id="@+id/mailText"
        android:layout_width="146dp"
        android:layout_height="39dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="28dp"
        android:text="Email"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmPassText" />

    <EditText
        android:id="@+id/firstNameEdit"
        android:layout_width="176dp"
        android:layout_height="37dp"
        android:layout_marginStart="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/lastNameEdit"
        app:layout_constraintStart_toEndOf="@+id/fNameText"
        app:layout_constraintTop_toTopOf="@+id/fNameText"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/lastNameEdit"
        android:layout_width="176dp"
        android:layout_height="37dp"
        android:layout_marginStart="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/lNameText"
        app:layout_constraintStart_toEndOf="@+id/lNameText"
        app:layout_constraintTop_toTopOf="@+id/lNameText"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/ageEdit"
        android:layout_width="176dp"
        android:layout_height="37dp"
        android:layout_marginStart="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/ageText"
        app:layout_constraintStart_toEndOf="@+id/ageText"
        app:layout_constraintTop_toTopOf="@+id/ageText"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/regionEdit"
        android:layout_width="176dp"
        android:layout_height="37dp"
        android:layout_marginStart="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/regionText"
        app:layout_constraintStart_toEndOf="@+id/regionText"
        app:layout_constraintTop_toTopOf="@+id/regionText"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/languegeEdit"
        android:layout_width="176dp"
        android:layout_height="37dp"
        android:layout_marginStart="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/languegeText"
        app:layout_constraintStart_toEndOf="@+id/languegeText"
        app:layout_constraintTop_toTopOf="@+id/languegeText"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/passEdit"
        android:layout_width="176dp"
        android:layout_height="37dp"
        android:layout_marginStart="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/passText"
        app:layout_constraintStart_toEndOf="@+id/passText"
        app:layout_constraintTop_toTopOf="@+id/passText"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/conPassET"
        android:layout_width="176dp"
        android:layout_height="37dp"
        android:layout_marginStart="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/confirmPassText"
        app:layout_constraintStart_toEndOf="@+id/confirmPassText"
        app:layout_constraintTop_toTopOf="@+id/confirmPassText"
        app:layout_constraintVertical_bias="0.0" />


    <EditText
        android:id="@+id/mailET"
        android:layout_width="176dp"
        android:layout_height="37dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="216dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        android:onClick="reg2"
        android:text="Continue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmPassText"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>